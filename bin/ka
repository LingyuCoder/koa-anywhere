#!/usr/bin/env node

var program = require('commander');
var pkg = require('../package.json');
var colors = require('colors');

colors.setTheme({
	silly: 'rainbow',
	input: 'grey',
	verbose: 'cyan',
	prompt: 'grey',
	info: 'green',
	data: 'grey',
	help: 'cyan',
	warn: 'yellow',
	debug: 'blue',
	error: 'red'
});

program.version(pkg.version)
	.option('-P, --port <n>', 'port the server use, default 3000', parseInt)
	.option('-D, --deep <n>', 'max showed deep of files, default 3', parseInt)
	.option('-S, --slient', 'should or not to run without log, default false', parseInt)
	.parse(process.argv);

require('../lib/startup.js').exec({
	port: program.port || 3000,
	deep: program.deep || 3,
	slient: program.slient || false
});